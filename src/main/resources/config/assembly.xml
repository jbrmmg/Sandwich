<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>

    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/src/main/resources/config/sandwich.service</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main//resources/config/sandwich-dev.service</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source> ${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>deploy/</outputDirectory>
            <destName>Sandwich-onejar.jar</destName>
        </file>
        <file>
            <source>${project.build.directory}/scripts/deploy/StopService.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>pre_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/scripts/deploy/StartService.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>post_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/main/resources/deployment/release.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>maven-releases-DeploymentDir.txt</destName>
            <fileMode>0664</fileMode>
        </file>
        <file>
            <source>${basedir}/src/main/resources/deployment/development.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>maven-snapshots-DeploymentDir.txt</destName>
            <fileMode>0664</fileMode>
        </file>
    </files>
</assembly>
